{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "build:dev": "tsc -w",
    "build:prod": "cp src/config/.prod.ts src/config/prod.ts && tsc && cp src/config/local.ts src/config/prod.ts",
    "serve:dev": "pm2 restart ecosystem.config.js --only basf-test --watch --no-daemon",
    "serve:prod": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js --only basf",
    "stop:dev": "pm2 stop basf-test",
    "stop:prod": "pm2 stop basf",
    "dev": "npm run build && concurrently \"npm:build:dev\" \"npm:serve:dev\"",
    "deploy": "npm run build:prod && npm run zip",
    "zip": "zip -r deploy.zip dist static scripts package.json ecosystem.config.js appspec.yml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",

    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-compose": "^4.1.0",
    "koa-static": "^5.0.0",
    "mysql": "^2.18.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/formidable": "^2.0.5",
    "@types/fs-extra": "^9.0.13",

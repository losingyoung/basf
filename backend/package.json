    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "formidable": "^2.0.1",
    "fs-extra": "^10.1.0",
    "log4js": "^6.4.7",
    "pm2": "^5.2.0",
    "typescript": "^4.6.4"
  }
